
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dq0xq762v/image/upload/v1669135545/beer_header_a7oscu.webp);">
  <div class="container">
    <h1 class=bro-munity>Join the <strong>BROMMUNITY</strong></h1>
    <div class="search-bar">
        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-flat">
            Search <i class="fa-solid fa-beer-mug-empty"></i>
            </button>
        </div>
          <% end %>
      </div>
    </div>
  </div>
</div>



<div class="cards container">
  <% @breweries.each do |brewery| %>
    <%= link_to brewery_path(brewery), class: "text-decoration-none" do %>
      <div class="card">
        <%= image_tag "https://res.cloudinary.com/dmskc1fi2/image/upload/v1669120290/beer_mobile_rsei0i.jpg" %>
        <div class="card-info">
          <div>
            <h2><%=brewery.name %></h2>
            <p><%= brewery.description %></p>
          </div>
          <div class="card-numb">
            <p><%= brewery.rating %></p>
            <p><%=brewery.price%>$</p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

