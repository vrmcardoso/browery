
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dq0xq762v/image/upload/v1669135545/beer_header_a7oscu.webp);">
  <div class="container">
    <h1 class=bro-munity>Join the <strong>BROMMUNITY</strong></h1>
    <div class="search-bar">
        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-flat">
            Search <i class="fa-solid fa-beer-mug-empty"></i>
            </button>
        </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

<h2 class="head-text">Popular</h2>
<div class="cards container col-10">
  <% @ranked_breweries.first(4).each do |brewery| %>
    <%= link_to brewery_path(brewery), class: "text-decoration-none" do %>
      <div class="card-brewery">
        <div class="card-img">
          <%= image_tag "https://res.cloudinary.com/dmskc1fi2/image/upload/v1669120290/beer_mobile_rsei0i.jpg" %>
          <%#= cl_image_tag brewery.photo.key %>
        </div>

        <div class="card-text">
          <h2><%=brewery.name %></h2>
          <p><strong>size: </strong><%=brewery.size%></p>
          <p><strong>capacity: </strong><%=brewery.capacity%></p>
          <p><%=brewery.price%> <i class="fa-solid fa-money-bill"></i></p>
          <p class="card-rating"><%=brewery.rating %><i class="fa-solid fa-star"></i></p>
        </div>

      </div>
    <% end %>
  <% end %>
</div>


